<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Ideal Gas Law"
        android:id="@+id/title"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="0dp"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="PV = nRT"
        android:id="@+id/equation"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/title"
        android:textSize="26sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="P (kPa) = "
        android:id="@+id/p"
        android:layout_alignParentLeft="true"
        android:layout_gravity="left"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/equation"
        android:textSize="26sp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"

        android:text="sd"
        android:id="@+id/pAnswer"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_marginLeft="15dp"
        android:textSize="22sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="V (L) = "
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/p"
        android:id="@+id/v"
        android:layout_gravity="left"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="26sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="n (mol)= "
        android:id="@+id/n"
        android:layout_gravity="left"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="26sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="R = 8.314 (L * kPa)/(K * mol)"
        android:id="@+id/r"
        android:layout_gravity="left"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="26sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="T (K) = "
        android:id="@+id/t"
        android:layout_gravity="left"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:textSize="26sp"/>

    <Button
        android:id="@+id/buttonC"
        android:layout_width="125dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:background="@drawable/mybutton"
        android:text="Calculate " />

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="125dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonC"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="57dp"
        android:background="@drawable/mybutton"
        android:text="Clear " />



</RelativeLayout><!-- From: file:/C:/Users/Naireen/Desktop/PeriodicTable4/app/src/main/res/layout/gas_laws.xml -->